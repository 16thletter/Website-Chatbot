<%= form_with url: urls_path, method: :post, local: true do %>
  <div class="mb-6">
    <label for="url" class="block text-lg font-semibold text-blue-700 mb-[15px]">
      Enter Website URL
    </label>
    <div class="flex flex-col sm:flex-row items-center">
      <%= text_field_tag :url, nil,
          placeholder: "https://example.com",
          class: "flex-1 px-8 py-2 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>

      <%= submit_tag "Process",
          class: "px-12 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-200 sm:ml-[10px] mt-3 sm:mt-0" %>
    </div>
  </div>
<% end %>
