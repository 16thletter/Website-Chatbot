<div class="flex h-screen">
  <%= render 'shared/sidebar' %>

  <main class="flex-1 p-6 overflow-y-auto">
    <div class="flex justify-center items-center min-h-screen">
      <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md" data-controller="processor">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Choose Processing Type</h2>

        <div class="flex justify-center mb-6 space-x-4">
          <button
            data-action="click->processor#selectWeb"
            class="px-4 py-2 rounded-xl border text-gray-700 hover:bg-blue-100 data-[selected=true]:bg-blue-600 data-[selected=true]:text-white"
            data-processor-target="webButton"
            data-selected="true"
          >
            Web Scraping
          </button>
          <button
            data-action="click->processor#selectDocument"
            class="px-4 py-2 rounded-xl border text-gray-700 hover:bg-blue-100 data-[selected=true]:bg-blue-600 data-[selected=true]:text-white"
            data-processor-target="documentButton"
            data-selected="false"
          >
            Document Reading
          </button>
        </div>

        <!-- Web Scraping Form -->
        <div data-processor-target="webForm">
          <%= form_with url: analyze_websites_path, method: :post, local: true do |form| %>
            <div class="mb-4">
              <%= form.label :url, "Enter Website URL", class: "block text-gray-700 mb-2" %>
              <%= form.text_field :url, placeholder: "https://example.com", class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
            <div class="flex justify-center">
              <%= form.submit "Process", class: "bg-blue-600 text-white px-6 py-2 rounded-xl hover:bg-blue-700 transition duration-300" %>
            </div>
          <% end %>
        </div>

        <!-- Document Reading Form -->
        <div data-processor-target="documentForm" class="hidden">
          <%= form_with url: documents_path, method: :post, local: true, html: { multipart: true } do |form| %>
            <div class="mb-4">
              <%= form.label :title, "Document Title", class: "block text-gray-700 mb-2" %>
              <%= form.text_field :title, placeholder: "e.g. Company Policy", class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= form.label :file, "Upload Document", class: "block text-gray-700 mb-2" %>
              <%= form.file_field :file, accept: ".pdf,.docx,.txt", class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="flex justify-center">
              <%= form.submit "Process", class: "bg-blue-600 text-white px-6 py-2 rounded-xl hover:bg-blue-700 transition duration-300" %>
            </div>
          <% end %>
        </div>


        <% if flash[:notice] %>
          <div class="mt-4 text-center text-green-600 font-semibold">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
