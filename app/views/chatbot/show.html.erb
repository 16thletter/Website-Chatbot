<div class="w-full max-w-2xl bg-white p-6 rounded-2xl shadow-lg border border-gray-200">
  <h1 class="text-3xl font-semibold mb-6 text-gray-900">
    Ask about:
    <div class="text-red-600 break-words"><%= @website.url %></div>
  </h1>

  <%= form_with url: ask_chatbot_path(@website), method: :post, local: true, data: { turbo: false } do %>
    <div class="mb-4">
      <%= label_tag :question, "Ask your question:", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= text_area_tag :question, nil, rows: 3, class: "w-full p-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black-500 shadow-sm resize-none bg-gray-50" %>
    </div>
    <div class="text-right">
      <%= submit_tag "Ask", class: "bg-black hover:bg-neutral-800 text-white font-medium px-6 py-2 rounded-xl transition duration-200" %>
    </div>
  <% end %>

  <% if @answer.present? %>
    <div class="mt-6 p-4 rounded-xl bg-gray-50 border border-gray-200 shadow-sm">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Answer:</h3>
      <div class="prose max-w-none text-gray-700">
        <%= markdown(@answer) %>
      </div>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="mt-6 text-red-600 font-semibold">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
